@using ScreenTimeManager.Models.Enums
@using ScreenTimeManager.Utility
@model ScreenTimeManager.Models.RuleBase

@if (Model.RuleType == RuleType.Fixed)
{
    <p>
        Time Charged:
        <span class="pendingTime @(Model.RuleModifier == RuleModifier.Add ? "pendingTime-add" : "pendingTime-subtract")">
            @((Model.RuleModifier == RuleModifier.Add ? "+ " : "- ") + 
                TotalScreenTimeManager.FormatTimeSpan((long) Model.FixedTimeEarned.TotalMilliseconds))
        </span>
    </p>
}

@if (Model.RuleType == RuleType.Variable)
{
    <p>
        Time Charged: <span class="pendingTime pendingTime-neutral" id="pendingTime">0h 0m 0s</span>
    </p>
}