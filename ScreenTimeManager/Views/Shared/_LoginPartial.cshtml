@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", null, new {title = "Manage", @class = "account-text"})
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="account-text">Log off</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", null, new {id = "registerLink", @class = "account-text"})</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", null, new {id = "loginLink", @class = "account-text"})</li>
    </ul>
}